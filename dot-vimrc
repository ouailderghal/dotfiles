" vi: ft=vim

set nocompatible
set expandtab
set shiftwidth=4
set softtabstop=4
set number

syntax enable
filetype plugin on

set ignorecase
set smartcase
set incsearch
set path+=**
set wildmenu
set mouse=a
set colorcolumn=80
set textwidth=80
colorscheme evening

call plug#begin()
    Plug 'tpope/vim-sensible'
    Plug 'tpope/vim-fugitive'
    Plug 'sheerun/vim-polyglot'
call plug#end()

nnoremap <C-p> :FZF<CR>
