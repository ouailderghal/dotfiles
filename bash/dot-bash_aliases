# -*- mode: sh; -*-

# General aliases
alias e="nvim"
alias q="exit"
alias rf="rm -rf"
alias systemctl="sudo systemctl"
alias open="xdg-open"
alias o="xdg-open"
alias pinger="ping -c 3 1.1.1.1"
alias fs_created="sudo tune2fs -l /dev/nvme0n1p2 | grep 'Filesystem created:'"
alias cnf="command-not-found"

# fzf
alias opc="od-open-config"
alias opw="od-open-project-work"
alias opp="od-open-project-personal"

# ls
alias ls="ls --color=auto"
alias sl="ls"
alias l="ls -lh"
alias ll="ls -lah"

# Git
alias g="git"
alias gl="git log --oneline --decorate"
alias ga="git add"
alias gaa="git add -A"
alias gcm="git commit -m"
alias gs="git status"
alias gss="git status -s"
alias gb="git branch"
alias gc="git checkout"
alias gcb="git checkout -b"
alias gp="git push"

# Tmux
alias t="tmux"
alias ta="tmux a"
alias tns="tmux new-session -s"
alias tat="tmux attach -t"
alias tls="tmux list-sessions"
alias tks="tmux kill-session -t"
alias tkserver="tmux kill-server"

# Other
alias dc="docker-compose"
alias va="vagrant"
alias an="ansible"
alias anp="ansible-playbook"
